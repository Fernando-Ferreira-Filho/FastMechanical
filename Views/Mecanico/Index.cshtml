@model IEnumerable<FastMechanical.Models.Mecanico>

@{
   ViewData["Title"] = $"Mecânicos";
}

@if (TempData["SuccessMessage"] != null) {
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null) {
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        @TempData["ErrorMessage"]
    </div>
}

<div class="row me-5">
    <div class="col-lg-10">
        <span class="display-4">@ViewData["Title"]</span>
    </div>
    <div style="width: 100%; display: flex; align-items:center;justify-content: flex-end;" class="col-lg-16">
       <div class="col-lg-3" style="max-width: 500px;display: flex; align-items:center;justify-content:space-evenly;">
        <a style="margin-right:5px;" asp-action="New" asp-controller="Mecanico" class="link-dark  float-sm-end"><i class="fa fa-user-plus d-block text-center" style="font-size:2rem; "></i><span>Novo&nbsp;&nbsp;</span></a>
       </div>
    </div>


</div>
<br />

<table class="table table-striped text-center" id="table-contacts">
    <thead>
        <tr>
            <th class="text-center" scope="col">@Html.DisplayNameFor(model => model.Id)</th>
            <th class="text-center" scope="col">@Html.DisplayNameFor(model => model.Nome)</th>
            <th class="text-center" scope="col">@Html.DisplayNameFor(model => model.Telefone)</th>

            @if (Model != null && Model.Any()) {
                <th class="text-center" scope="col">Ações</th>
            }
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any()) {
            @foreach (var item in Model) {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nome</td>
                    <td>@item.Telefone</td>
                    <td>
                        <div class="btn-group-sm" role="group">
                            <a role="button" class="btn btn-primary" asp-route-id="@item.Id" asp-controller="Mecanico" asp-action="Edit">Editar</a>
                            <a role="button" class="btn btn-dark" asp-route-id="@item.Id" asp-controller="Mecanico" asp-action="Details">Detalhes</a>
                        </div>
                    </td>
                </tr>
            }
        }
        else {
            <tr class="odd"><td valign="top" colspan="5">Nenhum registro encontrado</td></tr>
        }

    </tbody>
</table>
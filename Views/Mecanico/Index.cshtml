@model IEnumerable<Pessoa>

@{
    ViewData["Title"] = $"Mecânicos";
}

@if (TempData["SuccessMessage"] != null) {
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null) {
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        @TempData["ErrorMessage"]
    </div>
}

<div class="row me-5">
    <div class="col-lg-10">
        <span class="display-4">@ViewData["Title"]</span>
    </div>
    <div class="col-lg-16">
        <a style="margin-right:10px;" asp-action="New" asp-controller="Mecanico" class="link-dark  float-sm-end"><i class="fa fa-user-plus d-block text-center" style="font-size:2rem; "></i><span>Novo</span></a>
        <a style="margin-right:10px;" asp-action="Index" asp-controller="Mecanico" class="link-dark  float-sm-end"><i class="fa fa-user d-block text-center text-success" style="font-size:2rem; "></i><span>Ativos</span></a>
        <a style="margin-right:10px;" asp-action="Inativos" asp-controller="Mecanico" class="link-dark  float-sm-end"><i class="fa fa-user-lock d-block text-center text-danger " style="font-size:2rem; "></i><span>Inativos</span></a>
    </div>


</div>
<br />

<table class="table table-striped text-center" id="table-contacts">
    <thead>
        <tr>
            <th class="text-center" scope="col">@Html.DisplayNameFor(model => model.Id)</th>
            <th class="text-center" scope="col">@Html.DisplayNameFor(model => model.Nome)</th>
            <th class="text-center" scope="col">@Html.DisplayNameFor(model => model.Telefone)</th>

            @if (Model != null && Model.Any()) {
                <th class="text-center" scope="col">Ações</th>
            }
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any()) {
            @foreach (var item in Model) {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nome</td>
                    <td>@item.Telefone</td>
                    <td>
                        <div class="btn-group-sm" role="group">
                            @if (item.Status == FastMechanical.Models.Enums.Status.Ativado) {
                                <a role="button" class="btn btn-primary" asp-route-id="@item.Id" asp-controller="Mecanico" asp-action="Edit">Editar</a>
                                <a role="button" class="btn btn-dark" asp-route-id="@item.Id" asp-controller="Mecanico" asp-action="Details">Detalhes</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@item.Id" asp-controller="Mecanico" asp-action="Disable">Desativar</a>
                            }
                            @if (item.Status == FastMechanical.Models.Enums.Status.Desativado) {
                                <a role="button" class="btn btn-primary" asp-route-id="@item.Id" asp-controller="Mecanico" asp-action="Edit">Editar</a>
                                <a role="button" class="btn btn-dark" asp-route-id="@item.Id" asp-controller="Mecanico" asp-action="Details">Detalhes</a>
                                <a role="button" class="btn btn-success" asp-route-id="@item.Id" asp-controller="Mecanico" asp-action="Enable">Ativar</a>
                            }
                        </div>
                    </td>
                </tr>
            }
        }
        else {
            <tr class="odd"><td valign="top" colspan="5">Nenhum registro encontrado</td></tr>
        }

    </tbody>
</table>
@model Person
@{
    ViewData["Title"] = $"Detalhes do(a) vendedor(a) {@Model.Nome}";
}

<div class="">
    <h3 class="display-6">@ViewData["TItle"]</h3>
</div>
<hr />

<div class="row">
    <div class="col-lg-6">
        <h6 class="display-6 mb-5">Dados Pessoais</h6>

        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.Nome)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.Nome)
            </div>

        </div>
        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.Email)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.Email)
            </div>

        </div>

        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.Cpf)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.Cpf)
            </div>

        </div>
        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.Telefone)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.Telefone)
            </div>

        </div>


        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.DataDeNascimento)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.DataDeNascimento)
            </div>
        </div>


    </div>
    <div class="col-lg-6">
        <h6 class="display-6 mb-5">Endereço</h6>

        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.Estado)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.Estado)
            </div>

        </div>
        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.Cidade)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.Cidade)
            </div>

        </div>
        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.Bairro)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.Bairro)
            </div>

        </div>
        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.Rua)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.Rua)
            </div>

        </div>
        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.Numero)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.Numero)
            </div>

        </div>

        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.Complemento)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.Complemento)
            </div>

        </div>
    </div>

    @if (Model.Status == FastMechanical.Models.Enums.Status.Ativado) {
        <form asp-action="Disable" asp-controller="Mecanico" method="post" class="mb-5 mt-5">
            <input hidden asp-for="@Model.Id" />
            <input type="submit" value="Desativar" class="btn btn-danger" />
            <a role="button" class="btn btn-outline-secondary" asp-action="Index" asp-controller="Mecanico">Voltar</a>
        </form>
    }

    @if (Model.Status == FastMechanical.Models.Enums.Status.Desativado) {
        <form asp-action="Enable" asp-controller="Mecanico" method="post" class="mb-5 mt-5">
            <input hidden asp-for="@Model.Id" />
            <input type="submit" value="Ativar" class="btn btn-success" />
            <a role="button" class="btn btn-outline-secondary" asp-action="Inactive" asp-controller="Mecanico">Voltar</a>
        </form>
    }
</div>

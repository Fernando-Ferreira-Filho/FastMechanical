@model Veiculo
@{
    ViewData["Title"] = $"Detalhes do veiculo {@Model.Modelo}";
}

<div class="">
    <h3 class="display-6">@ViewData["TItle"]</h3>
</div>
<hr />

<div class="row">
    <div class="col-lg-6">
        <h6 class="display-6 mb-5">Dados do Veículo</h6>


        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.Renavam)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.Renavam)
            </div>

        </div>

        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.Placa)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.Placa)
            </div>

        </div>

        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">Dono do veículo</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.Pessoa.Nome)
            </div>

        </div>

    </div>
    <div class="col-lg-6">
        <h6 class="display-6 mb-5">Informações básicas</h6>

        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.Modelo)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.Modelo)
            </div>

        </div>
        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.Cor)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.Cor)
            </div>

        </div>
        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.Marca)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.Marca)
            </div>

        </div>


        @if (Model.Status == FastMechanical.Models.Enums.Status.Ativado) {
            <form asp-action="Disable" asp-controller="Veiculo" method="post" class="mb-5 mt-5">
                <input hidden asp-for="@Model.Id" />
                <input type="submit" value="Desativar" class="btn btn-danger" />
                <a role="button" class="btn btn-outline-secondary" asp-action="Index" asp-controller="Veiculo">Voltar</a>
            </form>
        }

        @if (Model.Status == FastMechanical.Models.Enums.Status.Desativado) {
            <form asp-action="Enable" asp-controller="Veiculo" method="post" class="mb-5 mt-5">
                <input hidden asp-for="@Model.Id" />
                <input type="submit" value="Ativar" class="btn btn-success" />
                <a role="button" class="btn btn-outline-secondary" asp-action="Inactive" asp-controller="Veiculo">Voltar</a>
            </form>
        }
    </div>

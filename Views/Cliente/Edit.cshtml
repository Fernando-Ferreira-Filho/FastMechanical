@model FastMechanical.Models.Cliente

@{
    ViewData["Title"] = "Editar clientes";
}


<div class="">
    <h3 class="display-6">@ViewData["TItle"]</h3>
</div>
<hr />


<form class="row g-3" asp-action="Edit">
    <div class="col-md-6">
        <label asp-for="@Model.Nome" class="form-label"></label><span class="text-danger">*</span>
        <input asp-for="@Model.Nome" type="text" class="form-control" placeholder="Digite o nome completo">
        <span asp-validation-for="@Model.Nome" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="@Model.Email" class="form-label"></label><span class="text-danger">*</span>
        <input asp-for="@Model.Email" type="email" class="form-control" placeholder="Digite o e-mail">
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="@Model.Telefone" class="form-label"></label><span class="text-warning"> (Apenas números)</span><span class="text-danger">*</span>
        <input asp-for="@Model.Telefone" type="text" class="form-control" placeholder="Digite o numero de telefone " onkeypress=" if (!isNaN(String.fromCharCode(window.event.keyCode))) return true; else return false;">
        <span asp-validation-for="@Model.Telefone" class="text-danger"></span>

    </div>

    <div class="col-md-6">
        <label asp-for="@Model.Cpf" class="form-label"></label><span class="text-warning"> (Apenas números)</span><span class="text-danger">*</span>
        <input asp-for="@Model.Cpf" type="text" class="form-control" id="cpf" placeholder="Digite o CPF do cliente" onkeypress=" if (!isNaN(String.fromCharCode(window.event.keyCode))) return true; else return false;">
        <span asp-validation-for="@Model.Cpf" class="text-danger"></span>

    </div>
    <div class="col-md-6">
        <label asp-for="@Model.DataDeNascimento" class="form-label"></label><span class="text-danger">*</span>
        <input asp-for="@Model.DataDeNascimento" type="date" class="form-control" id="cpf" placeholder="Digite a data de nascimento do cliente" onkeypress=" if (!isNaN(String.fromCharCode(window.event.keyCode))) return true; else return false;">
        <span asp-validation-for="@Model.DataDeNascimento" class="text-danger"></span>

    </div>

    <div class="col-md-6">

        <label asp-for="@Model.Rua" class="form-label"></label><span class="text-danger">*</span>
        <input asp-for="@Model.Rua" class="form-control" type="text" id="logradouro">
        <span asp-validation-for="@Model.Rua" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="@Model.Complemento" class="form-label"></label>
        <input asp-for="@Model.Complemento" class="form-control" type="text" id="complemento" placeholder="Digite o complemento">
    </div>
    <div class="col-md-6">
        <label asp-for="@Model.Bairro" class="form-label"></label><span class="text-danger">*</span>
        <input asp-for="@Model.Bairro" class="form-control" type="text" id="bairro">
        <span asp-validation-for="@Model.Bairro" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="@Model.Cidade" class="form-label"></label><span class="text-danger">*</span>
        <input asp-for="@Model.Cidade" class="form-control" type="text" id="localidade">
        <span asp-validation-for="@Model.Cidade" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="@Model.Estado" class="form-label"></label><span class="text-danger">*</span>
        <input asp-for="@Model.Estado" class="form-control" type="text" id="uf">
        <span asp-validation-for="@Model.Estado" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="@Model.Numero" class="form-label"></label>
        <input asp-for="@Model.Numero" class="form-control" type="text" id="complemento" placeholder="Digite o número do endereço" onkeypress=" if (!isNaN(String.fromCharCode(window.event.keyCode))) return true; else return false;">
    </div>

    <div class="col-12 mb-5">
        <button type="submit" class="btn btn-success">Cadastrar</button>
        <a role="button" class="btn btn-outline-secondary" asp-action="Index" asp-controller="Cliente">Voltar</a>
    </div>

</form>


@using System.Globalization;
@model Servicos
@{
    ViewData["Title"] = $"Detalhes do serviço {@Model.Nome}";
}

<div class="">
    <h3 class="display-6">@ViewData["TItle"]</h3>
</div>
<hr />

<div class="row">
    <div class="col-lg-6">
        <h6 class="display-6 mb-5">Dados do Serviço</h6>


        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.Nome)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.Nome)
            </div>

        </div>

        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.Valor)</span>
            </div>
            <div class="col-md-7">
                <span>@string.Format(CultureInfo.GetCultureInfo("pt-BR"), "{0:C}", Model.Valor)</span>
            </div>

        </div>


        <div class="col-12 mt-5 mb-5">
            <a role="button" asp-route-id="@Model.Id" asp-action="Edit" asp-controller="Servicos" class="btn btn-primary">Editar</a>
            <a role="button" class="btn btn-outline-secondary" asp-action="Index" asp-controller="Servicos">Voltar</a>
        </div>

    </div>
</div>

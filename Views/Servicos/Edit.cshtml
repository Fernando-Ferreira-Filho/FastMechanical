@model Servicos

@{
    ViewData["Title"] = "Editar serviço";
}


<div class="">
    <h3 class="display-6">@ViewData["TItle"]</h3>
</div>
<hr />


<form class="row g-3" asp-action="Edit">
    <input readonly asp-for="@Model.Id" type="hidden" value="@Model.Id">
    <div class="col-md-6">
        <label asp-for="@Model.Nome" class="form-label"></label><span class="text-danger">*</span>
        <input asp-for="@Model.Nome" type="text" class="form-control" placeholder="Digite o nome do serviço">
        <span asp-validation-for="@Model.Nome" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="@Model.Valor" class="form-label"></label><span class="text-danger">*</span>
        <input asp-for="@Model.Valor" type="text" class="form-control" placeholder="Digite o valor do serviço">
        <span asp-validation-for="@Model.Valor" class="text-danger"></span>
    </div>

    <div class="col-12 mb-5">
        <button type="submit" class="btn btn-success">Cadastrar</button>
        <a role="button" class="btn btn-outline-secondary" asp-action="Index" asp-controller="Servicos">Voltar</a>
    </div>

</form>

@model Servicos
@{
    ViewData["Title"] = $"Detalhes do serviço {@Model.Nome}";
}

<div class="">
    <h3 class="display-6">@ViewData["TItle"]</h3>
</div>
<hr />

<div class="row">
    <div class="col-lg-6">
        <h6 class="display-6 mb-5">Dados do Serviço</h6>


        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.Nome)</span>
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.Nome)
            </div>

        </div>

        <div class="row mb-2">
            <div class="col-md-4">
                <span class="fw-bold">@Html.DisplayNameFor(model => model.Valor)</span>
            </div>
            <div class="col-md-7">
                R$ @Html.DisplayFor(model => model.Valor)
            </div>

        </div>



        @if (Model.Status == FastMechanical.Models.Enums.Status.Ativado) {
            <form asp-action="Disable" asp-controller="Servicos" method="post" class="mb-5 mt-5">
                <input hidden asp-for="@Model.Id" />
                <input type="submit" value="Desativar" class="btn btn-danger" />
                <a role="button" class="btn btn-outline-secondary" asp-action="Index" asp-controller="Servicos">Voltar</a>
            </form>
        }

        @if (Model.Status == FastMechanical.Models.Enums.Status.Desativado) {
            <form asp-action="Enable" asp-controller="Servicos" method="post" class="mb-5 mt-5">
                <input hidden asp-for="@Model.Id" />
                <input type="submit" value="Ativar" class="btn btn-success" />
                <a role="button" class="btn btn-outline-secondary" asp-action="Inactive" asp-controller="Servicos">Voltar</a>
            </form>
        }
    </div>
</div>

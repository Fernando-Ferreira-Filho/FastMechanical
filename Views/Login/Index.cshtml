@model FastMechanical.Models.ViewModel.LoginViewModel



<div class="container m-0" >

    @{
        Layout = "_LayoutLoggedOut";
        ViewData["Title"] = "Login";

    }

    @if (TempData["SuccessMessage"] != null) {
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null) {
        <div class="alert alert-dismissible alert-danger">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            @TempData["ErrorMessage"]
        </div>
    }
    <div class=" p-0 ms-auto d-flex align-items-center justify-content-center">
        <div class="col-12 d-flex align-content-center justify-content-center">
            <div class="col-lg-11 mt-5">
                <div class="d-flex align-content-center justify-content-center">
                    <img width="250px" src="~/images/login.svg"/>
                </div>
                <div class="w-100 d-flex align-items-center justify-content-center">
                    <form asp-controller="Login" asp-action="Login" class="w-200 p-3">
                    <div class="mb-3">
                        <label for="user" class="form-label">@Html.DisplayNameFor(model => model.User)</label>
                        <input asp-for="@Model.User" type="text" class="form-control" id="user">
                        <span asp-validation-for="@Model.User" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">@Html.DisplayNameFor(model => model.Password)</label>
                        <input asp-for="@Model.Password" type="password" class="form-control" id="password">
                        <div id="user" class="form-text">Nunca compartilhe sua senha com ninguem</div>
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>
                    <div class="d-grid gap-2 mt-5">
                        <button style="background:#7386d5;border:none;color:#FFFFFF;outline:none;" type="submit" class="btn btn-info">Entrar</button>
                    </div>

                </form>
                </div>
            </div>
        </div>
    </div>
</div>

@model IEnumerable<Pessoa>

@{
    ViewData["Title"] = $"Alteração de perfil de usuario";
}

@if (TempData["SuccessMessage"] != null) {
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null) {
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        @TempData["ErrorMessage"]
    </div>
}

<div class="row me-5">
    <div class="col-lg-10">
        <span class="display-4">@ViewData["Title"]</span>
    </div>
    <a role="button" class="btn btn-outline-info mt-4" asp-action="Administracao" asp-controller="Admin">Voltar</a>
</div>
<br />
<table class="table table-striped text-center" id="table-contacts">
    <thead>
        <tr>
            <th class="text-center" scope="col">@Html.DisplayNameFor(model => model.Id)</th>
            <th class="text-center" scope="col">@Html.DisplayNameFor(model => model.Nome)</th>
            <th class="text-center" scope="col">@Html.DisplayNameFor(model => model.Telefone)</th>
            <th class="text-center" scope="col">Perfil</th>
            @if (Model != null && Model.Any()) {
                <th class="text-center" scope="col">Ações</th>
            }
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any()) {
            @foreach (var item in Model) {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nome</td>
                    <td>@item.Telefone</td>
                    <td>@item.TipoPessoa</td>
                    <td>
                        <div class="btn-group-sm" role="group">
                            <a role="button" class="btn btn-primary" asp-route-id="@item.Id" asp-controller="Admin" asp-action="AlterarPerfilUsuario">Editar</a>
                        </div>
                    </td>
                </tr>
            }
        }
        else {
            <tr class="odd"><td valign="top" colspan="5">Nenhum registro encontrado</td></tr>
        }

    </tbody>
</table>